{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "docker: start db",
      "type": "shell",
      "command": "docker compose up db -d --wait",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "presentation": {
        "reveal": "always",
        "panel": "shared",
        "group": "system-start"
      },
      "problemMatcher": []
    },
    {
      "label": "db: push migrations",
      "type": "shell",
      "command": "pnpm --filter generatorlog-backend db:push",
      "dependsOn": "docker: start db",
      "dependsOrder": "sequence",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "presentation": {
        "reveal": "always",
        "panel": "shared",
        "group": "system-start"
      },
      "problemMatcher": []
    }
  ]
}
